{
  "name": "myapp",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "nodemon ./src/bin/www",
    "debug": "node --inspect ./src/bin/www",
    "clean": "rm -rf ./data ./src/data ./node_modules ./playwright-report ./test-results ./test-data",
    "test": "cross-env NODE_ENV=test playwright test",
    "test:ui": "cross-env NODE_ENV=test playwright test --ui",
    "test:debug": "cross-env NODE_ENV=test playwright test --debug",
    "docker-build": "docker build -t myapp .",
    "docker-run": "docker run -p 3000:3000 myapp"
  },
  "dependencies": {
    "better-sqlite3": "^12.5.0",
    "debug": "4.4.3",
    "ejs": "^3.1.10",
    "express": "~5.2.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "cross-env": "^10.1.0",
    "nodemon": "^3.1.11"
  }
}
